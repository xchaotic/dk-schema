            <recipe role="recipe" xml:id="COOEXP241BEEBEE"> <!-- from metadata/cook-express.xml -->
                <title>Beef with Beetroot and Spinach</title>
                <info>
                    
                    <meta metaref="a_15minutes_cook"/>
                    <meta metaref="healthy_001"/>
                    <meta metaref="serves4"/>
                </info>
                
                <ingredients> <!-- TODO: more detail in ingredients -->
                    <variablelist role="ingredients" xml:id="COOEXP241BEEBEE_004">
                        <varlistentry role="ingredient" xml:id="COOEXP241BEEBEE_005"><!-- xml:ids skipped later for brevity -->
                            <term role="weight">350g</term>
                            <listitem><para>leftover <phrase role="ingredient" metaref="roastbeef_001">roast beef</phrase>, sliced</para></listitem>
                            
                        </varlistentry>
                        <varlistentry role="ingredient">
                            <term role="weight">250g</term>
                            <listitem><para><phrase role="ingredient" metaref="spinach_001">fresh spinach leaves</phrase>, rinsed</para></listitem>
