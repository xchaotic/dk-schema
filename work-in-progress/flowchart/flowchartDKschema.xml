                <arc xlink:from="AED_chest_compression" xlink:to="AED_reanalyze_rhythm"/>
                <arc xlink:from="AED_reanalyze_rhythm" xlink:to="AED_ready_analyze"/>
                <arc xlink:from="AED_shock_notneeded" xlink:to="AED_rescue_breath"/>
                <arc xlink:from="AED_rescue_breath" xlink:to="AED_reanalyze_rhythm"/>
                <arc xlink:from="AED_reanalyze_rhythm" xlink:to="AED_ready_analyze"/> 
            </extendedlink>
        </info>
        <mediaobject xml:id="FAM001FLOWCH_002">
            <imageobject xml:id="FAM001FLOWCH_003">
                <imagedata fileref="AEDflowchart.jpg"/>
            </imageobject>
