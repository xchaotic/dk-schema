                <locator xlink:href="FAM001FLOWCH_008" xlink:label="AED_chest_compression"/>
                <locator xlink:href="FAM001FLOWCH_009" xlink:label="AED_recovery_position"/>
                <locator xlink:href="FAM001FLOWCH_010" xlink:label="AED_shock_notneeded"/>
                <locator xlink:href="FAM001FLOWCH_011" xlink:label="AED_rescue_breath"/>
                <locator xlink:href="FAM001FLOWCH_012" xlink:label="AED_reanalyze_rhythm"/>
                
                <arc xlink:from="AED_switch_on" xlink:to="AED_ready_analyze"/>
